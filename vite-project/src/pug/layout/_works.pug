main
  section.worksContent_head
    h2.worksTitle Works
    .worksYear
      p.worksYear_text Year
      ul.worksYear_list
        li.worksYear_item.add All
        li.worksYear_item 2024
        li.worksYear_item 2023
        li.worksYear_item 2022
        li.worksYear_item 2021
  section.worksContent_list
    ul.worksContent_list
      - for(let i = 1; i <= 6; i++)
        - let delay = (i % 3 === 1) ? 100 : (i % 3 === 2) ? 300 : 600
          li(data-aos="fade", data-aos-delay=delay, data-aos-duration="1000").worksContent_item
            a(href="#") 
              h4.worksContent_itemTitle タイトルテキスト
              p.worksContent_itemDate
                time(datetime="2024-05-03") 2024.05.03 
              .worksContent_thumbnailImg
                img(src="./assets/images/worksThumbnail_noImage.png", alt="サムネイル画像", width="292", height="378")
    .worksContent_more
      a(href="works.pug").topWorks_moreBtn 
        p.worksContent_moreText More Works
        img.worksContent_moreArrow(src="./assets/images/arrow_icon.svg", alt="右向きの矢印" width="26" height="16")